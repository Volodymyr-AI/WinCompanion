<UserControl x:Class="WPF_WinCompanion.Apps_Views.Chess_App.Views.Additional.GameMenuOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPF_WinCompanion.Apps_Views.Chess_App.Views.Additional"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <!-- 3D Menu Button Style -->
        <Style x:Key="Menu3DButton" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="ShadowBorder"
                                    Background="#1A1A1A"
                                    CornerRadius="8"
                                    Margin="3,3,0,0"/>
                            <Border x:Name="MainBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    BorderBrush="#2C3E50"
                                    BorderThickness="2">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" 
                                                      Direction="315" 
                                                      ShadowDepth="2" 
                                                      Opacity="0.5"
                                                      BlurRadius="4"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  TextBlock.TextAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#4A90E2" Offset="0"/>
                                            <GradientStop Color="#357ABD" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="MainBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Blue" 
                                                          Direction="315" 
                                                          ShadowDepth="3" 
                                                          Opacity="0.7"
                                                          BlurRadius="6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="MainBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="1" Y="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ShadowBorder" Property="Margin" Value="2,2,1,1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#80000000"
            VerticalAlignment="Center"
            Height="250"
            CornerRadius="15"
            BorderBrush="#3498DB"
            BorderThickness="3">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              Direction="315" 
                              ShadowDepth="10" 
                              Opacity="0.8"
                              BlurRadius="15"/>
        </Border.Effect>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Choose Game Mode" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource Menu3DButton}"
                        Command="{Binding ShowSoloSettingsCommand}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#27AE60" Offset="0"/>
                            <GradientStop Color="#229954" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel>
                        <TextBlock Text="ðŸ" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Solo Game" FontSize="12" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource Menu3DButton}"
                        Command="{Binding ShowAISettingsCommand}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#E74C3C" Offset="0"/>
                            <GradientStop Color="#C0392B" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel>
                        <TextBlock Text="ðŸ¤–" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="AI Opponent" FontSize="12" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource Menu3DButton}"
                        Command="{Binding ShowOnlineSettingsCommand}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#3498DB" Offset="0"/>
                            <GradientStop Color="#2980B9" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <StackPanel>
                        <TextBlock Text="ðŸŒ" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Online Game" FontSize="12" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>