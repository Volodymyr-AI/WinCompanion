<UserControl x:Class="WPF_WinCompanion.Controls.MarqueeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_WinCompanion.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="1200">
    <Grid>
        <Border Background="#80FFFFFF" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <TextBlock Name="MarqueeTextBlock" FontSize="20" Foreground="Black" VerticalAlignment="Center" TextWrapping="NoWrap">
                <TextBlock.RenderTransform>
                    <TranslateTransform x:Name="MarqueeTransform" />
                </TextBlock.RenderTransform>
            </TextBlock>
        </Border>    
    </Grid>
</UserControl>
