<Window x:Class="WPF_WinCompanion.Apps_Windows.Chess_App.Views.ChessWindow"
        x:Name="ChessWindowRoot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_WinCompanion.Apps_Windows.Chess_App"
        xmlns:helpers="clr-namespace:WPF_WinCompanion.Apps_Windows.Chess_App.Helpers"
        mc:Ignorable="d"
        Title="Chess Board" Height="650" Width="670"
        ResizeMode="NoResize"
        Background="WhiteSmoke">
    <Window.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <!-- Flat button style -->
        <Style x:Key="FlatChessButton" TargetType="Button">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/> <!-- Top letters -->
            <RowDefinition/>             <!-- Chess board -->
            <RowDefinition Height="20"/> <!-- Bottom letters -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/> <!-- Left numbers -->
            <ColumnDefinition/>            <!-- Chess board -->
            <ColumnDefinition Width="20"/> <!-- Right numbers -->
        </Grid.ColumnDefinitions>
        <!-- Top letters -->
        <ItemsControl Grid.Row="0" Grid.Column="1" ItemsSource="{Binding BoardModel.Letters}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Bottom letters -->
        <ItemsControl Grid.Row="2" Grid.Column="1" ItemsSource="{Binding BoardModel.Letters}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Left numbers -->
        <ItemsControl Grid.Row="1" Grid.Column="0" ItemsSource="{Binding BoardModel.Numbers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Right numbers -->
        <ItemsControl Grid.Row="1" Grid.Column="2" ItemsSource="{Binding BoardModel.Numbers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="8"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Chess board squares -->
        <Border Grid.Row="1" Grid.Column="1"
                BorderBrush="Black" BorderThickness="1" Margin="1">
            <ItemsControl ItemsSource="{Binding BoardModel.Squares}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="8" Columns="8"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="0.5">
                            <Button Background="{Binding Background}" 
                                    Command="{Binding DataContext.SquareClickCommand, ElementName=ChessWindowRoot}"
                                    CommandParameter="{Binding }"
                                    Style="{StaticResource FlatChessButton}">
                                <Image Source="{Binding Piece.ImagePath}"
                                       Visibility="{Binding Piece, Converter={StaticResource NullToVisibilityConverter}}"
                                       Stretch="Uniform"
                                       Margin="4"/>
                            </Button>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl> 
        </Border>
    </Grid>
</Window>
